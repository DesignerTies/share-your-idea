// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Idea {
  id String @id @default(cuid()) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String @unique
  content String 
  imageId String?
  author User @relation(fields: [authorId], references: [id])
  authorId String
}

model User {
  id String @id @default(cuid())
  auth0Id String
  name String
  surName String
  username String
  email String @unique
  picture String
  primaryRole String
  ideas Idea[]
}

